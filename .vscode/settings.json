{
    // Automatically format using Black on save.
    "editor.formatOnSave": true,
    // Draw a ruler at Black's column width.
    "editor.rulers": [
        88,
    ],
    // Hide non-code files.
    "files.exclude": {
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.ruff_cache": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/dataset_cache": true,
        "**/lightning_logs": true,
        "**/Thumbs.db": true,
        "**/venv": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "debug.focusWindowOnBreak": false,
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/.ruff_cache/**": true,
        "**/checkpoints/**": true,
        "**/dataset_cache/**": true,
        "**/datasets/**": true,
        "**/lightning_logs/**": true,
        "**/outputs/**": true,
        "**/venv/**": true
    }
}